# Dockerfile för HTTP-server (ChatGPT-kompatibel) - Optimerad storlek
FROM python:3.12-slim

WORKDIR /app

# Installera system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Kopiera requirements först för bättre caching
COPY pyproject.toml .
COPY README.md .
COPY LICENSE .

# Installera uv
RUN pip install --no-cache-dir uv

# Kopiera source kod
COPY src/ ./src/

# Installera dependencies med uv (utan dev dependencies)
RUN uv pip install --system --no-cache -e .

# Railway exponerar PORT som environment variable
ENV PORT=8001

# Exponera port
EXPOSE $PORT

# Starta HTTP-server direkt med Python
CMD ["python", "-m", "kolada_mcp.http_server"]
